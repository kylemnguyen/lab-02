<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <EditText
            android:id="@+id/enterCityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_toLeftOf="@id/confirmCity"
            android:layout_below="@id/ListyCity"
            android:hint="Enter City Name"
            android:textSize="20dp"
            android:visibility="gone">
        </EditText>
        <Button
            android:id="@+id/confirmCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:layout_below="@id/ListyCity"
            android:text="Confirm"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:visibility="gone"/>



        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ListyCity"
            android:padding="20dp"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="#32a852"/>


        <LinearLayout
            android:id="@+id/ListyCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:orientation="horizontal">
            <Button
                android:id="@+id/addCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add"/>

            <Button
                android:id="@+id/removeCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remove" />

        </LinearLayout>

        <ListView
            android:id="@+id/city_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/confirmCity"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

        </ListView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>